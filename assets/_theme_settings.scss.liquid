div#menu, footer {
	.logo {
		background-image: url({{ "mindjob-white.svg"  | asset_url }});
	}
}

section {
  header h2 {
    color: {{settings.light_section_header_color}};
  }
  &.dark {
    background: {{settings.brand_dark}};
    header h2 {
      color: {{settings.dark_section_header_color}};
    }
  }

  &.drinking {
    header h2 {
      color: {{settings.drinking_section_header_color}};
    }
  }
  &.nsfw {
    header h2 {
      color: {{settings.nsfw_section_header_color}};
    }
  }
  &.drinking2 {
      background: {{settings.brand_dark}};
      header h2 {
      color: {{settings.drinking2_section_header_color}};
    }
  }
}
